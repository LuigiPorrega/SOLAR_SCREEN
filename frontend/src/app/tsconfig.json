{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": ["node", "vitest/globals"],
    "outDir": "./dist"
  },
  "include": ["src", "tests", "**/*.ts"],
  "exclude": ["node_modules"]
}
